        <button class="like-button liked" onclick="toggleLike(this)">
            <i class="far fa-thumbs-up thumbs-up-icon"></i>
        </button>
        <button class="unlike-button unliked" onclick="toggleLike(this)">
            <i class="far fa-thumbs-down thumbs-down-icon"></i>
        </button>
    
        <p id="like-status"></p>
       
    </div>
  

   
    <script>
        let liked = true;

        function toggleLike(button) {
            liked = !liked;
            const likeStatus = document.getElementById("like-status");

            if (liked) {
                likeStatus.innerText = "You liked this.";
                button.classList.remove("unliked");
                button.classList.add("liked");
            } else {
                likeStatus.innerText = "You unliked this.";
                button.classList.remove("liked");
                button.classList.add("unliked");
            }
        }
    </script>

